<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/bg_middle_user_init"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.2451"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002"
        app:srcCompat="@drawable/bg_sign_in" />

    <ImageView
        android:id="@+id/bg_top_user_init"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorBackGround"
        app:layout_constraintBottom_toTopOf="@+id/bg_middle_user_init"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bg_bottom_user_init"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorBackGround"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_middle_user_init"
        app:layout_constraintVertical_bias="0.0" />

    <!--
     ! TODO:: LOGO이미지 디자인
     ! TODO:: 상단부 DRINK EASY 글씨 처리
     -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_bottom_user_init"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_middle_user_init"
        app:layout_constraintVertical_bias="0.7"
        app:srcCompat="@drawable/br5" />

    <Button
        android:id="@+id/SignIn_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_for_bg"
        android:drawableEnd="@drawable/ic_arrow_next"
        android:gravity="bottom|clip_vertical"
        android:lineSpacingMultiplier="1.2"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingEnd="10dp"
        android:paddingBottom="8dp"
        android:text="@string/start_button"
        android:textColor="@color/colorPrimary"
        android:textScaleX="1"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.618"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_middle_user_init"
        app:layout_constraintVertical_bias="0.168" />

</androidx.constraintlayout.widget.ConstraintLayout>